<%= render "layouts/errors", :object => @lesson %>

<%= form_for @lesson do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.label :number %>
  <%= f.text_field :number %>
  <%= f.label :section %>
  <%= f.collection_select (:section_id, Section.all, :id, :description)%>
  <%= f.submit %>
<% end %>
